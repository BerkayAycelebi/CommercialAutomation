@using MVC_OnlineCommercialAutomation.Models.Classes
@model List<SalesMovement>
@{
    ViewBag.Title = "Orders";
    Layout = "~/Views/Shared/_CurrentLayout.cshtml";
}
<br />
<h2>Sipariş Geçmişim</h2>
<table class="table table-bordered">
    <tr>
        <th>Ürün Adı </th>
        <th>Miktar </th>
        <th>Fiyat</th>
        <th>Tarih </th>
    </tr>
    @foreach(var x in Model) {
<tr>
    <td>@x.Product.ProductName</td>
    <td>@x.Number</td>
    <td>@x.Price</td>
    <td>@Convert.ToDateTime(x.History).ToString("dd/MM/yyyy")</td>
</tr>
    }
</table>