@using MVC_OnlineCommercialAutomation.Models.Classes;
@model List<Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
@using (Html.BeginForm("Index", "Product", FormMethod.Get))
{
    <p>
        Ürün Adı: @Html.TextBox("p")
        <input type="submit" value="Ara" class="btn btn-primary" />
    </p>
}
<br />

<table class="table table-bordered">
    <tr>

        <th>Ürün</th>
        <th>Marka</th>
        <th>Stok</th>
        <th>Alış Fiyatı</th>
        <th>Satış Fiyatı</th>
        <th>Kategori</th>

        <th>Sil</th>
        <th>Güncelle</th>
        <th>Satış Yap</th>

    </tr>
    @foreach (var p in Model)
    {


           
        <tr>

            <td>@p.ProductName</td>
            <td>@p.ProductBrand</td>
            <td>@p.ProductStock</td>
            <td>@p.PurchasePrice ₺</td>
            <td>@p.SellingPrice ₺</td>
            <td>@p.Category.CategoryName</td>

            <td><a href="/Product/ProductDelete/@p.ProductID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Product/ProductGet/@p.ProductID" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Product/MakeSales/@p.ProductID" class="btn btn-outline-success">Satış Yap</a></td>

        </tr>
       
    }
</table>
<a href="/Product/NewProductAdd" class="btn btn-info">Yeni Ürün Ekle</a>


