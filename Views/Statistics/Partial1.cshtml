@model IEnumerable<MVC_OnlineCommercialAutomation.Models.Classes.ClassGroup1>

<div class="card-header">
    <h3 class="card-title">Personel Sayıları </h3>
</div>
<!-- /.card-header -->
<div class="card-body p-0">
    <table class="table table-sm">
        <thead>
            <tr>
                <th style="width: 10px">#</th>
                <th>Departman</th>
                <th>Oran</th>
                <th style="width: 40px">Sayı</th>
            </tr>
        </thead>
        <tbody>
            @{ int y = 0;}
            @foreach (var x in Model)
            {
                <tr>
                    <td> @{ y++;} @y.</td>
                    <td>@x.Deparmant</td>
                    <td>
                        <div class="progress progress-xs">
                            <div class="progress-bar progress-bar-danger" style="width:@x.Sum%"></div>
                        </div>
                    </td>
                    <td><span class="badge bg-danger">@x.Sum</span></td>
                </tr>
            }
        </tbody>
    </table>
</div>
<!-- /.card-body -->