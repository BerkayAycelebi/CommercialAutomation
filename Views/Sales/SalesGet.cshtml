@model MVC_OnlineCommercialAutomation.Models.Classes.SalesMovement
@{
    ViewBag.Title = "SalesGet";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>Ürün Güncelleme Sayfası</h2>

@using (Html.BeginForm("SalesUpdate", "Sales", FormMethod.Post))
{
    @Html.HiddenFor(x => x.SalesID)

    @Html.Label("Ürün:")
    @Html.DropDownListFor(x => x.Productid, (List<SelectListItem>)ViewBag.val1, new { @class = "form-control" })
    <br />
    @Html.Label("Cari:")
    @Html.DropDownListFor(x => x.Currentid, (List<SelectListItem>)ViewBag.val2, new { @class = "form-control" })
    <br />
    @Html.Label("Personel:")
    @Html.DropDownListFor(x => x.Staffid, (List<SelectListItem>)ViewBag.val3, new { @class = "form-control" })

    <br />
    @Html.Label("Adet:")
    @Html.TextBoxFor(x => x.Number, new { @class = "form-control" })
    <br />
    @Html.Label("Fiyat:")
    @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
    <br />
    @Html.Label("Toplam Tutar:")
    @Html.TextBoxFor(x => x.TotalAmount, new { @class = "form-control" })
    <br />
    @Html.Label("Tarih:")
    @Html.TextBoxFor(x => x.History, new { @class = "form-control" })
    <br />
    <button class="btn btn-warning">Kaydet</button>
}
