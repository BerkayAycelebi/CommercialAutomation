@using MVC_OnlineCommercialAutomation.Models.Classes
@model List<SalesMovement>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Satışlar</h2>
<table id="tbl1" class="table table-bordered" style="margin-top:20px">
    <thead>
        <tr>
            <th>ID</th>
            <th>Ürün</th>
            <th>Cari</th>
            <th>Personel</th>
            <th>Adet</th>
            <th>Fiyat</th>
            <th>Toplam Tutar</th>
            <th>Tarih</th>
            <th>Güncelle</th>
            <th>Detaylar</th>
        </tr>
    </thead>

    @foreach (var k in Model)
    {
        <tr>
            <td>@k.SalesID</td>
            <td>@k.Product.ProductName</td>
            <td>@k.Current.CurrentName @k.Current.CurrentSurname</td>
            <td>@k.Staff.StaffName @k.Staff.StaffSurname</td>
            <td>@k.Number</td>
            <td>@k.Price</td>
            <td>@k.TotalAmount</td>
            <td>@k.History</td>
            <td><a href="/Sales/SalesGet/@k.SalesID" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Sales/SalesDetail/@k.SalesID" class="btn btn-info " style="color:white">Detay</a></td>
        </tr>
    }
</table>
<a href="/Sales/SalesMake" class="btn btn-success">Satış Yap</a>



<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>

